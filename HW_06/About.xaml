<Window x:Class="HW_06.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_06"
        mc:Ignorable="d"
        Title="About" Height="250" Width="400"
        Icon="about.jpg"
        >
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" Margin="50">
        <TextBlock Text="Калькулятор 10.2009.4.0"/>
        <TextBlock Text="© Корпорация Майкрософт (Microsoft Corporation), 2020."/>
        <TextBlock Text="Все права защищены."/>
    </StackPanel>
</Window>

 